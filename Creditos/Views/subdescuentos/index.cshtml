@using (Html.BeginForm("Store", "subdescuentos", FormMethod.Post))
{
    <h2 style="text-align:center;">Agregar nuevo Subdescuento</h2>
    <br />
    <div>
        <div class="row">
            <div class="col-lg-4">
                <label>Descripci&oacute;n:</label>
                <div class="input-group">
                    <div class="input-group-prepend"><span class="input-group-text"><i class="la la-adn"></i></span></div>
                    @Html.TextBoxFor(m => m.descripcion, new { @id = "descripcions", onkeyup = "validar()", @class = "form-control", @placeholder = "Descripción subdescuento", @name = "descripcion" })
                    <div class="valid-feedback" style="text-align:center">El formato Coincide.</div>
                    <div class="invalid-feedback" style="text-align:center">Inserte un dato con el formato correcto.</div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div>
        <input id="btnIngreso" type="button" onclick="validarTdatos(); " value="Confirmar" class="btn btn-primary" />
        <input id="btnIngresoss" type="submit" style="display:none;" />

    </div>
    <br />
}

<div class="accordion accordion-light  accordion-svg-icon" id="accordionExample7">
    <div class="card">
        <div id="contenedorIngresos">
        </div>
    </div>
</div>

