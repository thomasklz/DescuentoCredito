                    <thead>
                        <tr>
                            <th>ITEM</th>
                            <th>DESCRIPCI&Oacute;N</th>
                            <th>Acciones</th>
                            <th style="display:none;"></th>

                        </tr>
                    </thead>
                    <tbody class="buscar">
                        @{int a = 1; }
                        @foreach (var item in listSubDescuento)
                        {
                            <tr class='row_@item.id_subdescuento'>
                                <td>@a</td>
                                <td>@item.descripcion</td>
                                <td>
                                    <a href='#' class='btn btn-outline-danger' data-toggle="kt-tooltip" title="Eliminar" onclick='DeleteSubDescuentos(@item.id_subdescuento)'><span class='flaticon2-rubbish-bin'></span></a>
