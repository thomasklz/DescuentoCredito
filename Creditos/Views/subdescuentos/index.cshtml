</div>

<div class="modal fade" id="MyModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 id="ModalTitle" style="text-align:center">Modificar SubDescuento</h4>
                <a href="#" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body">
                <form id="form">
                    <fieldset id="SubmitForm">
                        @Html.HiddenFor(m => m.id_subdescuento, new { @id = "id_subdescuento" })
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="kt-section">
                                    <label>Descripci&oacute;n:</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend"><span class="input-group-text"><i class="la la-adn"></i></span></div>
                                        @Html.TextBoxFor(m => m.descripcion, new { @id = "descripcion", @class = "form-control", @placeholder = "Name*" })
                                        <div class="valid-feedback" style="text-align:center">El formato Coincide.</div>
                                        <div class="invalid-feedback" style="text-align:center">Inserte un dato con el formato correcto.</div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="kt-section">
                                    <label><br /></label>
                                    <div class="input-group">
                                        <a href="#" class="btn btn-label-success" onclick="UpdateSubDescuentos()">Guardar Cambios</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

        function ValidarIngreso() {
            var _descr = $('#descripcions').val();
        $.ajax({
            url: '@Url.Action("ValidarSubdescuento", "subdescuentos")',
            type: 'post',
            dataType: 'JSON',
            data: { _descr: _descr },
            success: function (data) {
                console.log(data);
                $("#btnIngreso").attr("submit");
                if (data.validar == true) {
                    Swal.fire({
                        title: 'Confirmar?',
                        text: "Se almacenará el nuevo dato!",
                        type: "success",
                        confirmButtonText: 'OK',
                        confirmButtonColor: '#3085d6',
                        showCancelButton: true,
                        cancelButtonText: 'Editar'
                    }).then((result) => {
                        if (result.value) {

                            $("#btnIngresoss").trigger("click");
                        };
                        })

                } else {
                    $("#contenedorIngresos").html(data.mensaje);
                }
            },
        });
    }
</script>

<script type="text/javascript">
        $(function () {
            $('#descripcions').keyup(function () {
                var _thisDesc = $('#descripcions');
                var _desc = $('#descripcions').val();
                _thisDesc.attr('style', 'background:white');
                if (_desc == null || _desc.length == 0) {
                    $('#descripcions').removeClass('is-valid');
                    $('#descripcions').addClass('is-invalid');
                } else {
                    $('#descripcions').removeClass('is-invalid');
                    $('#descripcions').addClass('is-valid');
                }
            });
        });
        $(function () {
            $('#descripcion').keyup(function () {
                var _thisDesc = $('#descripcion');
                var _desc = $('#descripcion').val();
                _thisDesc.attr('style', 'background:white');
                if (_desc == null || _desc.length == 0) {
                    $('#descripcion').removeClass('is-valid');
                    $('#descripcion').addClass('is-invalid');
                } else {
                    $('#descripcion').removeClass('is-invalid');
                    $('#descripcion').addClass('is-valid');
                }
            });
        });
</script>

<script>
        function validarTdatos() {
            desc = document.getElementById("descripcions").value;
            if (desc == null || desc.length == 0 || /^\s+$/.test(desc)) {
                $('#descripcions').addClass('is-invalid');
                return true;
            } else ValidarIngreso();
        }

        $(document).ready(function () {
            $('#example').dataTable();
        });

        $(document).ready(function () {
            (function ($) {
                $('.filtrar').keyup(function () {
                    var rex = new RegExp($(this).val(), 'i');
                    $('.buscar tr').hide();
                    $('.buscar tr').filter(function () {
                        return rex.test($(this).text());
                    }).show();
                });
            }(jQuery));
        });
        var row;
        function UpdateSubDescuentos(SubDescuento) {
            var data = $("#SubmitForm").serialize();
            $.ajax({
                type: "Post",
                url: "/subdescuentos/UpdateSubDescuentos",
                data: data,
                success: function (result) {
                    if (result == "Registro actualizado") {
                        Swal.fire(
                            'Actualizado!',
                            'Registro Actualizado',
                            'success'
                        )
                        row.find("td").eq(1).html($('#descripcion').val());
                    } else {
                        Swal.fire(
                            'Reintentar!',
                            'ERROR AL ACTUALIZAR',
                            'error'
                        )
                    }
                    $("#MyModal").modal("hide");
                }
            })
        }
        $('body').on('click', '.edit', function () {
            var id = $(this).val();
            row = $(this).parents("tr");
            $("#MyModal").modal();
            $.ajax({
                type: "GET",
                url: "/subdescuentos/GetSubDescuentosById?SubDescuentosId=" + id,
                success: function (data) {
                    var obj = JSON.parse(data);
                    $("#id_subdescuento").val(obj[0].id_subdescuento);
                    $("#descripcion").val(obj[0].descripcion);
                }
            })
        })

        function DeleteSubDescuentos(SubDescuento) {
            Swal.fire({
                title: 'Estás seguro?',
                text: 'Deseas eliminar el registro seleccionado!',
                type: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Borrar',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.value) {
                    $.ajax({
                        type: "POST",
                        url: "/subdescuentos/DeleteSubDescuentos?SubDescuentosId=" + SubDescuento,
                        success: function (result) {
                            if (result == "Eliminado") {
                                Swal.fire(
                                    'Borrado!',
                                    'El registro fue borrado con éxito',
                                    'success'
                                )
                                $(".row_" + SubDescuento).remove();
                            } else {
                                Swal.fire(
                                    'Borrado!',
                                    'No se pudo eliminar el registro',
                                    'error'
                                )
                            }
                        }
                    })
                }
            })
        }
</script>

