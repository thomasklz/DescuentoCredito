
@model Creditos.Models.mValorAsignado

@{
    List<Creditos.Models.mValorAsignado> listValAsig = ViewBag.val_asig;
}
<h1>Asigaci&oacute;n de valores</h1>
@using (Html.BeginForm("Store", "valorAsignado", FormMethod.Post))
{
    <div class="form-group">
        <label>Monto Aprobado</label>
        @Html.TextBoxFor(m => m.monto_aprobado, new { @id = "monto_aprobados", @class = "form-control", @placeholder = "Monto Aprobado", @name = "monto_aprobado" })
    </div>
            @Html.HiddenFor(m => m.aso_id, new { @id = "aso_id", @Value = "1" })
    <div>
        <label>Persona </label>
        <div class="form-group">
            @Html.DropDownListFor(m => m.empleado_id, ViewBag.persona as SelectList, "--Ingrese una persona--", new { @id = "Id_Personas", @class = "form-control" })
        </div>
    </div>
            <div>
                <label>Proveedores </label>
                <div class="form-group">
                    @Html.DropDownListFor(m => m.proveedor_id, ViewBag.proveedor as SelectList, "--Seleccione un Proveedor--", new { @id = "proveedor_ids", @class = "form-control" })
                </div>
            </div>
            <div>
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
}
<table class="table-hover">
    <tr>
        <th>Item</th>
        <th>Monto Aprobado</th>
        <th>Persona</th>
        <th>Proveedor</th>
        <th>Acciones</th>
    </tr>
    @foreach (var item in listValAsig)
    {
        <tr class='row_@item.id_valor_asig'>
            <td>@item.id_valor_asig</td>
            <td>@item.monto_aprobado</td>
            <td>@item.empleado</td>
            <td>@item.proveedor</td>
            <td>
                <a href='#' class='btn btn-danger' onclick='DeleteValAsignado(@item.id_valor_asig)'><span class='glyphicon glyphicon-trash'></span></a>
                <a href='#' class='btn btn-info' data-id="@item.id_valor_asig"><span class='glyphicon glyphicon-edit'></span></a>
            </td>
        </tr>
    }
</table>
<div class="modal fade" id="MyModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h4 id="ModalTitle">Modificar Valores Asignados</h4>
            </div>
            <div class="modal-body">
                <form id="form">
                    <fieldset id="SubmitForm">
                        @Html.HiddenFor(m => m.id_valor_asig, new { @id = "id_val_asig" })
                        <div class="form-group">
                            <label>Valor</label>
                            @Html.TextBoxFor(m => m.monto_aprobado, new { @id = "monto_aprobado", @class = "form-control", @placeholder = "Name*" })
                        </div>
                        @Html.HiddenFor(m => m.aso_id, new { @id = "aso_id", @Value = "1" })
                        <div class="form-group">
                            <label>Persona</label>
                            @Html.DropDownListFor(m => m.empleado_id, ViewBag.persona as SelectList, "--Seleccione una Persona--", new { @id = "empleado_id", @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Mes</label>
                            @Html.DropDownListFor(m => m.proveedor_id, ViewBag.proveedor as SelectList, "--Seleccione Proveedor--", new { @id = "proveedor_id", @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <a href="#" class="btn btn-block btn-danger" onclick="UpdateValAsignado()">Save</a>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
