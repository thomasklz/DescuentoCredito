<script>
      function validarTdatosModal() {
          valor = document.getElementById("valor").value;
          tpIngr = document.getElementById("tipo_egreso_id").selectedIndex;
          mes = document.getElementById("mes_id").selectedIndex;

          if (!/^\d*\,?\d*$/.test(valor) || valor == null || valor == 0) {
              $('#valor').addClass('is-invalid');
              $("#inCantm").html("Este campo es obligatorio");
              return true;
          } else if (tpIngr == null || tpIngr == 0) {
              $('#tipo_egreso_id').addClass('is-invalid');
              $("#inTpInm").html("No ha seleccionado un tipo de ingreso.");
              return true;
          } else if (mes == null || mes == 0) {
              $('#mes_id').addClass('is-invalid');
              $("#inMesVm").html("No ha seleccionado un mes.");
              return true;
          }
          $('#valor').removeClass('is-invalid');
          $('#tipo_egreso_id').removeClass('is-invalid');
          $('#mes_id').removeClass('is-invalid');
          UpdateEgreso();
      }
      function validarTdatos() {
          valor = document.getElementById("valors").value;
          tpIngr = document.getElementById("tipo_egreso_ids").selectedIndex;
          mes = document.getElementById("mes_ids").selectedIndex;

          if (!/^\d*\,?\d*$/.test(valor) || valor == null || valor == 0) {
              $('#valors').addClass('is-invalid');
              $("#inCant").html("Este campo es obligatorio");
              return true;
          } else if (tpIngr == null || tpIngr == 0) {
              $('#tipo_egreso_ids').addClass('is-invalid');
              $("#inTpIn").html("No ha seleccionado un tipo de Egreso.");
              return true;
          } else if (mes == null || mes == 0) {
              $('#mes_ids').addClass('is-invalid');
              $("#inMesV").html("No ha seleccionado un mes.");
              return true;
          } ValidarIngreso();
      }

      $(document).ready(function () {
          $('#example').dataTable();
      });

      $(document).ready(function () {
          (function ($) {
              $('.filtrar').keyup(function () {
                  var rex = new RegExp($(this).val(), 'i');
                  $('.buscar tr').hide();
                  $('.buscar tr').filter(function () {
                      return rex.test($(this).text());
                  }).show();
              });
          }(jQuery));
      });

      var row;
      function UpdateEgreso(Egreso) {
          var data = $("#SubmitForm").serialize();
          $.ajax({
              type: "Post",
              url: "/egresos/UpdateEgresos",
              data: data,
              success: function (result) {
                  if (result == "Registro actualizado") {
                      Swal.fire(
                          'Actualizado!',
                          'Registro Actualizado',
                          'success'
                      )
                      row.find("td").eq(1).html('$ '+$('#valor').val());
                      row.find("td").eq(3).html($('select[id="mes_id"] option:selected').text());
                      row.find("td").eq(2).html($('select[id="tipo_egreso_id"] option:selected').text());
                  } else {
                      Swal.fire(
                          'Reintentar!',
                          'ERROR AL ACTUALIZAR',
                          'error'
                      )
                  }
                  $("#MyModal").modal("hide");
              }
          })
      }

      $('body').on('click', '.edit', function () {
          var id = $(this).val();
          row = $(this).parents("tr");
          $("#MyModal").modal();
          $.ajax({
              type: "GET",
              url: "/egresos/GetEgresoById?EgresoId=" + id,
              success: function (data) {
                  var obj = JSON.parse(data);
                  $("#id_egresos").val(obj[0].id_egresos);
                  $("#valor").val(obj[0].valor);
                  $("#mes_id option[value='" + obj[0].mes_id + "']").attr("selected", true);
                  $("#tipo_egreso_id option[value='" + obj[0].tipo_egreso_id + "']").attr("selected", true);
              }
          })
      })

      function DeleteEgreso(Egreso) {
        Swal.fire({
            title: '¿Está seguro?',
            text: '¿Desea eliminar el registro seleccionado?',
            type: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Borrar',
            cancelButtonText: 'Cancelar'
        }).then((result) => {
            if (result.value) {
                $.ajax({
                    type: "POST",
                    url: "/egresos/DeleteEgreso?EgresoId=" + Egreso,
                    success: function (result) {
                        if (result == "Eliminado") {
                            Swal.fire(
                                'Borrado!',
                                'El registro fue borrado con éxito',
                                'success'
                            )
                            $(".row_" + Egreso).remove();
                        } else {
                            Swal.fire(
                                'Borrado!',
                                'No se pudo eliminar el registro',
                                'error'
                            )
                        }
                    }
                })
            }
        })
      }

</script>

