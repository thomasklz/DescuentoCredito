@using (Html.BeginForm("Store", "credito", FormMethod.Post))
{
    <h2 style="text-align:center;">Solicitar un Cr&eacute;dito.</h2>
    <br />
    <div>
        <div class="kt-portlet__body">
            <div class="row">
                <div class="col-lg-4">
                    <div class="kt-section">
                        <label>Descripción:</label>
