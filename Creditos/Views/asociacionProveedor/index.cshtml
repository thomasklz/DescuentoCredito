<script>
    $(document).ready(function () {
        $('.add').click(function () {
        Swal.fire({
           title: 'Proveedor Añadido',
           icon: 'success',
           confirmButtonText: 'Ok',
           cancelButtonText: 'Cancelar'})
            $('#ruc').val($(this).parents("tr").find("td").eq(1).html());
            $('#nombre').val($(this).parents("tr").find("td").eq(3).html());
            $('#descripcion').val($(this).parents("tr").find("td").eq(4).html());
            $('#proveedor_id').val($(this).parents("tr").find("td").eq(0).html());
            $("#accor").trigger("click")
        })
        $('.adds').click(function () {
            Swal.fire({
                title: 'Proveedor Añadido',
                icon: 'success',
                confirmButtonText: 'Ok',
                cancelButtonText: 'Cancelar'
            })
            $('#nombres').val($(this).parents("tr").find("td").eq(3).html());
            $('#proveedor_ids').val($(this).parents("tr").find("td").eq(0).html());
            $("#accors").trigger("click")
        })
    })

    $(document).ready(function () {
        (function ($) {
            $('.filtrar').keyup(function () {
                var rex = new RegExp($(this).val(), 'i');
                $('.buscar tr').hide();
                $('.buscar tr').filter(function () {
                    return rex.test($(this).text());
                }).show();
            });
        }(jQuery));
    });
    var row;
    function UpdateAsoProv(AsoProv) {
        var data = $("#SubmitForm").serialize();
        $.ajax({
            type: "Post",
            url: "/asociacionProveedor/UpdateAsoProv",
            data: data,
            success: function (result) {
                if (result == "Registro actualizado") {
                    Swal.fire(
                        'Actualizado!',
                        'Registro Actualizado',
                        'success'
                    )
                    row.find("td").eq(1).html($('#nombres').val());
                    row.find("td").eq(2).html($('select[id="asociacion_id"] option:selected').text());
                } else {
                    Swal.fire(
                        'Reintentar!',
                        'ERROR AL ACTUALIZAR',
                        'error'
                    )
                }
                $("#MyModal").modal("hide");
            }
        })
    }
    $(document).ready(function () {
        $('[data-id]').click(function () {
            row = $(this).parents("tr");
            var id = $(this).data("id")
            $("#MyModal").modal();
            $.ajax({
                type: "GET",
                url: "/asociacionProveedor/GetAsoProvById?AsoProvId=" + id,
                success: function (data) {
                    var obj = JSON.parse(data);
                    debugger
                    $("#id_asoc_provs").val(obj[0].id_asoc_prov);
                    $("#fecha_").val(obj[0].valor);
                    $("#asociacion_id option[value='" + obj[0].asociacion_id + "']").attr("selected", true);
                }
            })
        })
    })
    function DeleteAsoProv(AsoProv) {
        Swal.fire({
            title: 'Estás seguro?',
            text: 'Deseas eliminar el registro seleccionado!',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Borrar',
            cancelButtonText: 'Cancelar'
        }).then((result) => {
            if (result.value) {
                $.ajax({
                    type: "POST",
                    url: "/asociacionProveedor/DeleteAsoProv?AsoProvId=" + AsoProv,
                    success: function (result) {
                        if (result == "Eliminado") {
                            Swal.fire(
                                'Borrado!',
                                'El registro fue borrado con éxito',
                                'success'

                            )
                            $(".row_" + AsoProv).remove();
                        } else {
                            Swal.fire(
                                'Borrado!',
                                'No se pudo eliminar el registro',
                                'error'
                            )
                        }
                        var table = document.getElementById("#tablaSA");
                        table.refresh();
                    }
                })
            }
            })

    }
</script>
