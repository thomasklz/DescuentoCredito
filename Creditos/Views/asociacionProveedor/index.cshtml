
@model Creditos.Models.mAsociacionProveedor

@{
    List<Creditos.Models.mAsociacionProveedor> listEmplAso = ViewBag.aso_prov;
    List<Creditos.Models.mProveedores> listProv = ViewBag.proveedor;
}

<div class="kt-subheader kt-grid__item" id="kt_subheader">
    <div class="kt-container ">
        <div class="kt-subheader__main">
            <h4>
                BIENVENIDOS
                <small>Nuevos Convenios</small>
            </h4>
            <span class="kt-subheader__separator kt-hidden"></span>
        </div>

    </div>
</div>

@using (Html.BeginForm("Store", "asociacionProveedor", FormMethod.Post))
{
    <br />
    <p>
        <a class="btn btn-label-linkedin" data-original-title="Seleccione una persona" data-toggle="collapse" href="#multiCollapseExample1" role="button" id="accor" aria-expanded="false" aria-controls="multiCollapseExample1">Proveedores disponibles</a>
    </p>
    <div class="row">
