@model Creditos.Models.mTipoEgreso
@{List<Creditos.Models.mTipoEgreso> listTipoEgreso = ViewBag.tipoegreso;}

<div class="kt-subheader kt-grid__item" id="kt_subheader">
    <div class="kt-container ">
        <div class="kt-subheader__main">
            <h2>
                BIENVENIDOS
                <small>Tipo de Egresos</small>
            </h2>
            <span class="kt-subheader__separator kt-hidden"></span>
        </div>

    </div>
</div>

@using (Html.BeginForm("Store", "tipoegresos", FormMethod.Post))
{
    <div>
        <label>Descripción:</label>
        <div class="input-group">
            <div class="input-group-prepend"><span class="input-group-text"><i class="la la-adn"></i></span></div>
            @Html.TextBoxFor(m => m.descripcion, new { @id = "descripcions", @class = "form-control", @placeholder = "Descripción del Egreso", @name = "descripcion" })
        </div>
    </div>
    <br />
    <div>
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
    <br />
}

<table class="table" style="text-align:center">
    <tr>
        <th>Item</th>
        <th>Descripción</th>
        <th>Acciones</th>
    </tr>
    @foreach (var item in listTipoEgreso)
    {
        <tr class='row_@item.id_tipo_egreso'>
            <td>@item.id_tipo_egreso</td>
            <td>@item.descripcion</td>
            <td>
                <a href='#' class='btn btn-outline-danger' data-toggle="kt-tooltip" data-original-title="Eliminar" onclick='DeleteTipoEgresos(@item.id_tipo_egreso)'><span class='flaticon2-rubbish-bin'></span></a>
                <a href='#' class='btn btn-outline-info' data-toggle="kt-tooltip" data-original-title="Modificar" data-id="@item.id_tipo_egreso" ><span class='flaticon2-pen'></span></a>
            </td>
        </tr>
    }

</table>
<div class="modal fade" id="MyModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h4 id="ModalTitle">Modificar Tipos de Egresos</h4>
            </div>
            <div class="modal-body">
                <form id="form">
                    <fieldset id="SubmitForm">
                        @Html.HiddenFor(m => m.id_tipo_egreso, new { @id = "id_tipo_egreso" })

                        <div class="form-group">
                            <label>Descripción</label>
                            @Html.TextBoxFor(m => m.descripcion, new { @id = "descripcion", @class = "form-control", @placeholder = "Name*" })
                        </div>
                        <div class="form-group">
                            <a href="#" class="btn btn-block btn-danger" onclick="UpdateTipoEgresos()">Save</a>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    var row;
    function UpdateTipoEgresos(TipoEgreso) {
        var data = $("#SubmitForm").serialize();
        $.ajax({
            type: "Post",
            url: "/tipoegresos/UpdateTipoEgresos",
            data: data,
            success: function (result) {
                if (result == "Registro actualizado") {
                    Swal.fire({
                        position: 'top-end',
                        icon: 'success',
                        title: 'Registro actualizado',
                        showConfirmButton: false,
                        timer: 1500
                    })
                    row.find("td").eq(1).html($('#descripcion').val());

                } else {
                    Swal.fire({
                        position: 'top-end',
                        icon: 'error',
                        title: 'Error al actualizado',
                        showConfirmButton: false,
                        timer: 1500
                    })
                }
                $("#MyModal").modal("hide");
            }
        })
    }
    $(document).ready(function () {
        $('[data-id]').click(function () {
            row = $(this).parents("tr");
            var id = $(this).data("id")
            $("#MyModal").modal();
            $.ajax({
                type: "GET",
                url: "/tipoegresos/GetTipoEgresosById?TipoEgresosId=" + id,
                success: function (data) {
                    var obj = JSON.parse(data);
                    $("#id_tipo_egreso").val(obj[0].id_tipo_egreso);
                    $("#descripcion").val(obj[0].descripcion);
                }
            })
        })
    })
    function DeleteTipoEgresos(TipoEgreso) {
        Swal.fire({
            title: 'Estás seguro?',
            text: 'Deseas eliminar el registro seleccionado!',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Borrar',
            cancelButtonText: 'Cancelar'
        }).then((result) => {
            if (result.value) {
                $.ajax({
                    type: "POST",
                    url: "/tipoegresos/DeleteTipoEgresos?TipoEgresoId=" + TipoEgreso,
                    success: function (result) {
                        if (result == "Eliminado") {
                            Swal.fire(
                                'Borrado!',
                                'El registro fue borrado con éxito',
                                'success'
                            )
                            $(".row_" + TipoEgreso).remove();
                        } else {
                            Swal.fire(
                                'Borrado!',
                                'No se pudo eliminar el registro',
                                'error'
                            )
                        }
                    }
                })
            }
        })
    }
</script>

