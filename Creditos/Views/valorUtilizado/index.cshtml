<script type="text/javascript">
    $(function () {

        $('#cantidad_usada').keyup(function () {
            var _thisCnt = $('#cantidad_usada');
            var _cnt = $('#cantidad_usada').val();
            _thisCnt.attr('style', 'background:white');
            if (_cnt == null || !/^\d*\,?\d*$/.test(_cnt) || _cnt == 0) {
                $('#cantidad_usada').removeClass('is-valid');
                $('#cantidad_usada').addClass('is-invalid');
                $("#inCant").html("Se requiere un valor numérico.");
            } else {
                $('#cantidad_usada').removeClass('is-invalid');
                $('#cantidad_usada').addClass('is-valid');
            }
        });
    });

    function ValidarIngreso() {
          var _idValorAsign = $('#valor_asig_id').val();
          var _idMes = $('#mes_ids').val();
          var _cantidad = $('#cantidad_usada').val();
        $.ajax({
            url: '@Url.Action("ValidarValorUtil", "valorUtilizado")',
            type: 'post',
            dataType: 'JSON',
            data: { _idValorAsign: _idValorAsign, _idMes: _idMes, _cantidad: _cantidad},
            success: function (data) {
                console.log(data);
                $("#btnIngreso").attr("submit");
                if (data.validar == true) {
                    Swal.fire({
                        title: 'Confirmar?',
                        text: "Se almacenará el nuevo dato!",
                        type: "success",
                        confirmButtonText: 'OK',
                        confirmButtonColor: '#3085d6',
                        showCancelButton: true,
                        cancelButtonText: 'Editar'
                    }).then((result) => {
                        if (result.value) {

                            $("#btnIngresoss").trigger("click");
                        };
                        })

                } else {
                    $("#contenedorIngresos").html(data.mensaje);
                }
            },
        });
    }
</script>

