<script>
    $(document).ready(function () {
        $('#example').dataTable();
    });

    $(document).on('focus', '#idLocalNames', function () {
        $(this).autocomplete({
            //source have a url of a service
            source: '@Url.Action("AutoCompleteExternalDataExample2")',
            minLength: 0//min = 2 characters
        });
    });


    $(document).ready(function () {
        (function ($) {
            $('.filtrar').keyup(function () {
                var rex = new RegExp($(this).val(), 'i');
                $('.buscar tr').hide();
                $('.buscar tr').filter(function () {
                    return rex.test($(this).text());
                }).show();
            });
        }(jQuery));
    });
    $(document).ready(function () {
        $('.add').click(function () {
            Swal.fire({
                title: 'Persona Añadida',
                type: 'success',
                confirmButtonText: 'Ok',
                cancelButtonText: 'Cancelar'
            })
            $('#Cedulas').val($(this).parents("tr").find("td").eq(1).html());
            $('#Nombress').val($(this).parents("tr").find("td").eq(2).html());
            $('#SegundoNombres').val($(this).parents("tr").find("td").eq(3).html());
            $('#empleado_id').val($(this).parents("tr").find("td").eq(0).html());
            $("#accor").trigger("click")
        })
    })
    $(document).ready(function () {
        $('.adds').click(function () {
            Swal.fire({
                title: 'Persona Añadida',
                type: 'success',
                confirmButtonText: 'Ok',
                cancelButtonText: 'Cancelar'
            })
            $('#Nombres').val($(this).parents("tr").find("td").eq(2).html());
            $('#empleado_ids').val($(this).parents("tr").find("td").eq(0).html());
            $("#accors").trigger("click")
        })
    })

    var row;
    function UpdateDescuento(Descuento) {
        var data = $("#SubmitForm").serialize();
        $.ajax({
            type: "Post",
            url: "/descuento/UpdateDescuentos",
            data: data,
            success: function (result) {
                if (result == "Registro actualizado") {
                    Swal.fire(
                        'Actualizado!',
                        'Registro Actualizado',
                        'success'
                    )
                    row.find("td").eq(1).html($('#valor').val());
                    row.find("td").eq(5).html($('#fecha').val());
                    row.find("td").eq(3).html($('select[id="cab_desc_id"] option:selected').text());
                    row.find("td").eq(4).html($('select[id="mes_id"] option:selected').text());
                } else {
                    Swal.fire(
                        'Reintentar!',
                        'ERROR AL ACTUALIZAR',
                        'error'
                    )
                }
                $("#MyModal").modal("hide");
            }
        })
    }
    $('body').on('click', '.edit', function () {
        var id = $(this).val();
        row = $(this).parents("tr");
        $("#MyModal").modal();
        $.ajax({
            type: "GET",
            url: "/descuento/GetDescuentoById?DescuentoId=" + id,
            success: function (data) {
                var obj = JSON.parse(data);
                $("#id_descuentos").val(obj[0].id_descuento);
                $("#valor").val(obj[0].valor);
                $("#fecha_").val(obj[0].fecha);
                $("#empleado_ids").val(obj[0].empleado_id);
                $("#mes_id option[value='" + obj[0].mes_id + "']").attr("selected", true);
                $("#cab_desc_id option[value='" + obj[0].cab_desc_id + "']").attr("selected", true);
            }
        })
    })

    function DeleteDescuento(Descuento) {
        Swal.fire({
            title: 'Estás seguro?',
            text: 'Deseas eliminar el registro seleccionado!',
            type: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Borrar',
            cancelButtonText: 'Cancelar'
        }).then((result) => {
            if (result.value) {
                $.ajax({
                    type: "POST",
                    url: "/descuento/DeleteDescuento?DescuentoId=" + Descuento,
                    success: function (result) {
                        if (result == "Eliminado") {
                            Swal.fire(
                                'Borrado!',
                                'El registro fue borrado con éxito',
                                'success'
                            )
                            $(".row_" + Descuento).remove();
                        } else {
                            Swal.fire(
                                'Borrado!',
                                'No se pudo eliminar el registro',
                                'error'
                            )
                        }
                    }
                })
            }
        })
    }
</script>
