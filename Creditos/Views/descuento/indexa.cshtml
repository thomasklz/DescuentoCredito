                                <td style="display:none;">@item.cab_desc_id</td>
                                <td>@item.cabecera</td>
                                <td style="display:none;">@item.mes_id</td>
                                <td>@item.mes</td>
                                <td style="display:none;">@item.val_asig</td>
                                <td>@DateTime.Now.ToShortDateString()</td>
                                <td>
                                    <button class='btn btn-success btn-elevate btn-pill btn-elevate-air oks' data-toggle="kt-tooltip" title="Aprobar" onclick="aprobar()"><span class='flaticon2-checkmark'></span></button>
