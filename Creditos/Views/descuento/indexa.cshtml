<div class="modal fade" id="modalinfo">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 id="ModalTitle" style="text-align:center">Ajuste de Descuentos</h4>
                <a href="#" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body">
                <form id="form">
                    <fieldset id="SubmitForm">

                        <div class="row">
                            <div class="col-lg-6">
                                <div class="kt-section">
                                    <label>Cantidad a descontar:</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend"><span class="input-group-text"><i class="la la-money"></i></span></div>
                                        @Html.TextBoxFor(m => m.valor, new { @id = "valor", @class = "form-control", @placeholder = "Name*" })
                                        <div class="valid-feedback" style="text-align:center">El formato Coincide.</div>
                                        <div class="invalid-feedback" style="text-align:center">Se requiere un valor num&eacute;rico.</div>
                                    </div>
                                    @Html.HiddenFor(m => m.id_descuento, new { @id = "id_desc", @Value = "" })
                                    @Html.Hidden("total", new { @id = "total", @Value = "" })
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="kt-section">
                                    <label>Sobrante:</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend"><span class="input-group-text"><i class="la la-calendar"></i></span></div>
                                        @Html.TextBoxFor(m => m.sumatoria, new { @id = "ajuste", @class = "form-control", @placeholder = "0", @Value = "0" })
                                        <div class="valid-feedback" style="text-align:center">El formato Coincide.</div>
                                        <div class="invalid-feedback" style="text-align:center">Se requiere un valor num&eacute;rico.</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="kt-section">
                                    <label><br /></label>
                                    <div class="input-group">
                                        <a href="#" class="btn btn-label-success" onclick="validarTdatos()">Guardar Ajuste</a>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

    $(function () {
        $('#valor').keyup(function () {
            var _thisCnt = $('#valor');
            var _cnt = $('#valor').val();
            _thisCnt.attr('style', 'background:white');
            if (_cnt == null || !/^\d*\,?\d*$/.test(_cnt) || _cnt == 0) {
                $('#valor').removeClass('is-valid');
                $('#valor').addClass('is-invalid');
            } else {
                $('#valor').removeClass('is-invalid');
                $('#valor').addClass('is-valid');
            }
        });
    });
    $(function () {
        $('#ajuste').keyup(function () {
            var _thisCnt = $('#ajuste');
            var _cnt = $('#ajuste').val();
            _thisCnt.attr('style', 'background:white');
            if (_cnt == null || !/^\d*\,?\d*$/.test(_cnt) || _cnt == 0) {
                $('#ajuste').removeClass('is-valid');
                $('#ajuste').addClass('is-invalid');
            } else {
                $('#ajuste').removeClass('is-invalid');
                $('#ajuste').addClass('is-valid');
            }
        });
    });
</script>

<script>

    $(document).ready(function () {
        $('.example').dataTable();
    });

    $(document).ready(function () {
        (function ($) {
            $('.filtrar').keyup(function () {
                var rex = new RegExp($(this).val(), 'i');
                $('.buscar tr').hide();
                $('.buscar tr').filter(function () {
                    return rex.test($(this).text());
                }).show();
            });
        }(jQuery));
    });

    //Llenar un descuento
    $(document).ready(function () {
        $('.oks').click(function () {
        Swal.fire({
            title: 'Esta Seguro de Guardar este Descuento?',
            type: 'warning',
            confirmButtonText: 'Ok',
            cancelButtonText: 'Cancelar'
        })
        
        $('#val_asig').val($(this).parents("tr").find("td").eq(9).html());
        $('#valors').val($(this).parents("tr").find("td").eq(1).html());
        $('#smt').val($(this).parents("tr").find("td").eq(2).html());
        $('#empleado_ids').val($(this).parents("tr").find("td").eq(3).html());
        $('#cab_desc_ids').val($(this).parents("tr").find("td").eq(5).html());
        $('#mes_ids').val($(this).parents("tr").find("td").eq(7).html());
        $("#btnIngresos").trigger("click")
        })
    })

    var row;
    function Ajuste() {
        var data = $("#SubmitForm").serialize();
        cols = document.getElementById("id_desc").value;
        ajt = document.getElementById("ajuste").value;
        row.find("td").eq(1).html($('#valor').val());
        row.find("td").eq(2).html($('#ajuste').val()); 
        if (ajt == 0 || ajt==null) {
            $("#modalinfo").modal("hide");
            $(".row_" + cols).css("background-color", "#B3F9C1");
        } else {
            $("#modalinfo").modal("hide");
            $(".row_" + cols).css("background-color", "#FE8888");
        }
    }

    $('body').on('click', '.edit', function () {
        var id = $(this).val();
        row = $(this).parents("tr");
        $("#modalinfo").modal();
        $('#id_desc').val($(this).parents("tr").find("td").eq(0).html());
        $('#valor').val($(this).parents("tr").find("td").eq(1).html());
        $('#total').val($(this).parents("tr").find("td").eq(1).html());
    })

    function validarTdatos() {

        valor = document.getElementById("valor").value;
        ajt = document.getElementById("ajuste").value;
        var s = parseInt(valor) + parseInt(ajt);
        ttl = document.getElementById("total").value;
        if (typeof (valor) == "number" || valor == null || valor == 0) {
            $('#valor').addClass('is-invalid');
            return true;
        } else if (typeof (valor) == "number" || valor == null || valor == 0) {
            $('#ajuste').addClass('is-invalid');
            return true;
        }else if (s != ttl) {
            Swal.fire({
                title: 'La cantidad inicial no coincide con el ajuste realizado',
                type: 'warning',
                confirmButtonText: 'Ok',
                cancelButtonText: 'Cancelar'
            })
            return true;
        }

        Ajuste();
    }


</script>
