<div class="modal fade" id="modalinfo">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 id="ModalTitle" style="text-align:center">Informaci&oacute;n del Descuento</h4>
                <a href="#" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body">
                <form id="form">
                    <fieldset id="SubmitForm">
                        <div class="row">
                            <br/>
                            <h2 style="text-align:center;">Detalles Principales</h2>
                            <br />
                        </div>
                        <div class="row">
                            <div class="col-lg-3">
                                <div class="kt-section">
                                    <label>Persona:</label>
                                </div>
                            </div>
                            <div class="col-lg-8">
                                <div class="kt-section">
                                    <div class="input-group">
                                        <div class="input-group-prepend"><span class="input-group-text"><i class="la la-adn"></i></span></div>
                                        @Html.TextBox("persona", null, new { @class = "form-control", disabled = "disabled", placeholder = "*Name" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-3">
                                <div class="kt-section">
                                    <label>Mes:</label>
                                </div>
                            </div>
                            <div class="col-lg-8">
                                <div class="kt-section">
                                    <div class="input-group">
                                        <div class="input-group-prepend"><span class="input-group-text"><i class="la la-adn"></i></span></div>
                                        @Html.TextBox("mes", null, new { @class = "form-control", disabled = "disabled", placeholder = "*Name" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-3">
                                <div class="kt-section">
                                    <label>Descripci&oacute;n:</label>
                                </div>
                            </div>
                            <div class="col-lg-8">
                                <div class="kt-section">
                                    <div class="input-group">
                                        <div class="input-group-prepend"><span class="input-group-text"><i class="la la-adn"></i></span></div>
                                        @Html.TextBox("descr_desc", null, new { @class = "form-control", disabled = "disabled", placeholder = "*Name" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-3">
                                <div class="kt-section">
                                    <label>Cantidad Descontada:</label>
                                </div>
                            </div>
                            <div class="col-lg-8">
                                <div class="kt-section">
                                    <div class="input-group">
                                        <div class="input-group-prepend"><span class="input-group-text"><i class="la la-adn"></i></span></div>
                                        @Html.TextBox("cantidad", null, new { @class = "form-control", disabled = "disabled", placeholder = "*Name" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-5">
                            </div>
                            <div class="col-lg-2">
                                <div class="kt-section">
                                    <div class="input-group">
                                        <a href="#" class="btn btn-label-success" data-dismiss="modal">Listo!</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>

<script>

    $(document).ready(function () {
        $('.infor').click(function () {
            row = $(this).parents("tr");
            var id = $(this).data("id")
            $("#modalinfo").modal();
            $('#persona').val($(this).parents("tr").find("td").eq(1).html());
            $('#mes').val($(this).parents("tr").find("td").eq(4).html());
            $('#descr_desc').val($(this).parents("tr").find("td").eq(3).html());
            $('#cantidad').val($(this).parents("tr").find("td").eq(2).html())
        })
    })

    $(document).ready(function () {
        $('.example').dataTable();
    });

    $(document).ready(function () {
        (function ($) {
            $('.filtrar').keyup(function () {
                var rex = new RegExp($(this).val(), 'i');
                $('.buscar tr').hide();
                $('.buscar tr').filter(function () {
                    return rex.test($(this).text());
                }).show();
            });
           // $("btnIngreso").attr("disabled", true);
        }(jQuery));
    });

</script>
